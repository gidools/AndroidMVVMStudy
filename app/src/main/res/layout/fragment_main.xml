<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnTextBinding"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Text binding"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnButtonBinding"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Button binding"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/btnTextBinding"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnTextBinding"
        app:layout_constraintTop_toBottomOf="@+id/btnTextBinding" />

    <Button
        android:id="@+id/btnInputValidation"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Input binding"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/btnButtonBinding"
        app:layout_constraintTop_toBottomOf="@+id/btnButtonBinding" />

    <Button
        android:id="@+id/btnList"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="List binding"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/btnInputValidation"
        app:layout_constraintTop_toBottomOf="@+id/btnInputValidation" />

</android.support.constraint.ConstraintLayout>